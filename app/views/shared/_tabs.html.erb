<ul class="nav nav-tabs" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" data-toggle="tab" href="#users">Users</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" href="#groups">Groups</a>
  </li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
  <div id="users" class="container tab-pane active"><br>
    <% if @users.present?  %>
      <% @users.each do |user| %>
        <%= link_to user.username, user_path(user) if user!=current_user %> <br/>
      <% end %>
    <% else %>
      <div class="text-muted">
        The are no users
      </div>
    <% end %>

  </div>
  <div id="groups" class="container tab-pane fade"><br>
    <% if @rooms.present? %>
      <% @rooms.each do |room| %>
        <%= link_to room.name, room_path(room) %> <br/>
      <% end %>
    <% else %>
      <div class="text-muted">
        The are no rooms
      </div>
    <% end %>
    <div class="mb-3">
      <%= link_to new_room_path, class: 'btn btn-primary' do %>
        Create a room
      <% end %>
    </div>
  </div>
</div>
